---
import Container from "../../shared/Container.astro";
import GradiantText from "../../shared/GradiantText.astro";
import SubTitle2 from "../../shared/SubTitle2.astro";
import Title2 from "../../shared/Title2.astro";
import InvolvementCard from "./components/InvolvementCard.astro";
import { getPrinciples } from "./data.ts";

export interface Props {
  className?: string;
}
const { className } = Astro.props;
---

<section id="cta" class=`${className}`>
  <Container
    className="mx-auto flex flex-col items-center justify-center text-center"
  >
    <Title2>{getPrinciples.title}</Title2>
    <SubTitle2>
      <GradiantText>{getPrinciples.subheading1_1}</GradiantText>
      {getPrinciples.subheading1_2}
    </SubTitle2>
  </Container>
  <Container className="space-y-10 md:sapce-y-12 mb-5">
    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
      {
        getPrinciples.initiatives.map((principle) => {
          return (
            <InvolvementCard
              title={principle.title}
              description={principle.description}
              visual={principle.visual}
            />
          );
        })
      }
    </div>
  </Container>
</section>
